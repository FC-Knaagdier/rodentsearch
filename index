<!DOCTYPE html>
<html lang="nl">
<head>
  <meta charset="UTF-8">
  <title>Nieuwszoekmachine</title>
</head>
<body>
  <h1>Laatste nieuws</h1>
  
  <!-- Zoekbalk en knop -->
  <label for="zoek-term">Zoek naar nieuws:</label>
  <input type="text" id="zoek-term" placeholder="Zoek op titel...">
  <button onclick="zoekNieuws()">Zoek</button>

  <ul id="nieuws-lijst"></ul>

  <script>
    let origineleItems = [];

    async function laadRSS() {
      const proxyUrl = 'https://api.allorigins.win/get?url=';
      const feedUrl = encodeURIComponent('https://www.ad.nl/home/rss.xml');
      try {
        const response = await fetch(`${proxyUrl}${feedUrl}`);
        const data = await response.json();
        const parser = new DOMParser();
        const xml = parser.parseFromString(data.contents, "application/xml");
        const items = xml.querySelectorAll("item");
        const lijst = document.getElementById("nieuws-lijst");
        origineleItems = []; // Reset de originele lijst
        items.forEach(item => {
          const titel = item.querySelector("title").textContent;
          const link = item.querySelector("link").textContent;
          const li = document.createElement("li");
          const a = document.createElement("a");
          a.href = link;
          a.textContent = titel;
          a.target = "_blank";
          li.appendChild(a);
          lijst.appendChild(li);

          // Voeg het item toe aan origineleItems voor later gebruik
          origineleItems.push({ titel, link });
        });
      } catch (error) {
        console.error("Fout bij het laden van de RSS-feed:", error);
      }
    }

    // Functie om door nieuws te zoeken
    function zoekNieuws() {
      const zoekTerm = document.getElementById("zoek-term").value.toLowerCase();
      const lijst = document.getElementById("nieuws-lijst");
      lijst.innerHTML = ''; // Maak de lijst leeg

      // Filter de items op zoekterm
      const gefilterdeItems = origineleItems.filter(item => item.titel.toLowerCase().includes(zoekTerm));

      // Toon de gefilterde items
      gefilterdeItems.forEach(item => {
        const li = document.createElement("li");
        const a = document.createElement("a");
        a.href = item.link;
        a.textContent = item.titel;
        a.target = "_blank";
        li.appendChild(a);
        lijst.appendChild(li);
      });
    }

    laadRSS(); // Laad de RSS-feed bij het starten
  </script>
</body>
</html>
